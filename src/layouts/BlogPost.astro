---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'posts'>['data'];

const { title, subtitle, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="leading-[1.7] max-w-screen-md mx-auto px-4 py-12">
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={`/img/${heroImage}`} alt="" />}
				</div>
				<div class="text-gray-500 mt-6 mb-1">
					<FormattedDate date={pubDate} />
					{
						updatedDate && (
							<div class="last-updated-on">
								Last updated on <FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
				<h1>{title}</h1>
				{subtitle && <div class="text-2xl font-sans text-gray-400">{subtitle}</div>}
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
